extends ../../layout

block css
  link(rel="stylesheet", href="/css/common.css")
  link(rel="stylesheet", href="/css/recruitment.css")
  link(rel="stylesheet", href="/css/cubeportfolio.min.css")

block js
  script(src="/js/recruitment.js")

block breadcrumbs
  .breadcrumbs
    .container
      h1.pull-left 採用情報

block content
  .banner
    .container
      h1 ようこそ！
      h1 イー・ビジネスの採用ページへ
  .hiring
    .container
      .row
        .col-sm-1
        .col-sm-4
          .recruit-link-btn#link-btn-graduates(role="button")
            i.service-icon.icon-graduation
            h4.no-top-space 新卒採用
        .col-sm-2
        .col-sm-4
          .recruit-link-btn#link-btn-career(role="button")
            i.service-icon.icon-badge
            h4.no-top-space 経験者採用
        .col-sm-1
  .container.content
    #grid-container.cbp-l-grid-gallery
      ul.list-unstyled
        li.cbp-item
          a(href="/recruitment/a").cbp-singlePageInline
            .service-bg
            .desc-btn.desc-btn-deep-green.text-center
              .vcenter
                i.service-icon.icon-rocket
                h4.no-top-space
                  | イー・ビジネスが
                  br
                  | 目指す未来
        li.cbp-item
          a(href="/recruitment/a").cbp-singlePageInline
            .service-bg
            .desc-btn.desc-btn-red.text-center
              .vcenter
                i.service-icon.icon-graph
                h4.no-top-space
                  | キャリア制度
        li.cbp-item
          a(href="/recruitment/a").cbp-singlePageInline
            .service-bg
            .desc-btn.desc-btn-deep-blue.text-center
              .vcenter
                i.service-icon.icon-wallet
                h4.no-top-space
                  | 福利厚生
        li.cbp-item
          a(href="/recruitment/office").cbp-singlePageInline
            .service-bg
            .desc-btn.desc-btn-light-blue.text-center
              .vcenter
                i.service-icon.icon-layers
                h4.no-top-space
                  | オフィス紹介
        li.cbp-item
          a(href="/recruitment/employee").cbp-singlePageInline
            .service-bg
            .desc-btn.desc-btn-purple.text-center
              .vcenter
                i.service-icon.icon-user
                h4.no-top-space
                  | 社員紹介
        li.cbp-item
          a(href="/recruitment/faq").cbp-singlePageInline
            .service-bg
            .desc-btn.desc-btn-light-green.text-center
              .vcenter
                i.service-icon.icon-question
